{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=Cities;User Id=TestUser;Password=TestPassword;MultipleActiveResultSets=true"

  },
  "DetailedErrors": "true",
